@model MotoTrackerGps.Models.EditTrackerModel

@{
    ViewData["Title"] = "Edit Tracker";
}
<h1>Edit Tracker</h1>

<form method="post" asp-action="EditTracker">

    <div class="form-group">
        <label asp-for="ID" readonly>Name:</label>
        <input asp-for="ID" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrackerName">Name:</label>
        <input asp-for="TrackerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imei">Imei Number:</label>
        <input asp-for="Imei" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrackerIP">Tracker IP:</label>
        <input asp-for="TrackerIP" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrackerPort">Tracker Port:</label>
        <input asp-for="TrackerPort" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<form method="post" action="@Url.Action("TrackerList", "TrackerGPS")">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
